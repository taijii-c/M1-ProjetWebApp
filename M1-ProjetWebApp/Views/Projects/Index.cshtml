@model IEnumerable<M1_ProjetWebApp.Models.Project>

@{
    ViewData["Title"] = "Mes Projets";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Mes Projets</h1>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau Projet
        </a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <p>Aucun projet pour le moment.</p>
  </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-white">Pas d'image</span>
                        </div>
                    }

                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</p>
                        <p class="text-muted small">
                            <i class="bi bi-calendar"></i> @item.DateCreated.ToString("dd/MM/yyyy")
                        </p>
                    </div>

                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Détails</a>
         
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Modifier</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Supprimer</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
  </div>
}
