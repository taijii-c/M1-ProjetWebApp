@model M1_ProjetWebApp.Models.Project

@{
    ViewData["Title"] = "Supprimer le projet";
}

<h1 class="text-danger">Supprimer le projet</h1>

<h3 class="alert alert-warning">Etes-vous sur de vouloir supprimer ce projet ?</h3>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" class="card-img-top" alt="@Model.Title" style="max-height: 300px; object-fit: cover;" />
            }

            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>

                <hr />

                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateCreated)</dt>
                    <dd class="col-sm-8">@Model.DateCreated.ToString("dd/MM/yyyy")</dd>

                    @if (!string.IsNullOrEmpty(Model.GithubUrl))
                    {
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.GithubUrl)</dt>
                        <dd class="col-sm-8">@Model.GithubUrl</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.LiveUrl))
                    {
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.LiveUrl)</dt>
                        <dd class="col-sm-8">@Model.LiveUrl</dd>
                    }
                </dl>
            </div>
        </div>

        <div class="mt-3">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmer la suppression
                </button>
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </form>
        </div>
    </div>
</div>
