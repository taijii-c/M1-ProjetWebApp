@model M1_ProjetWebApp.Models.Article

@{
    ViewData["Title"] = "Supprimer l'article";
}

<h1 class="text-danger">Supprimer l'article</h1>

<div class="alert alert-warning">
    <h4>⚠️ Êtes-vous sûr de vouloir supprimer cet article ?</h4>
    <p>Cette action est irréversible.</p>
</div>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">@Model.Title</h3>
        <p class="text-muted">
            <i class="bi bi-person-circle"></i> @(Model.Author?.UserName ?? "Auteur inconnu")
            <span class="ms-2"><i class="bi bi-calendar3"></i> @Model.PublishedDate.ToString("dd/MM/yyyy à HH:mm")</span>
        </p>
        <hr />
        <div class="article-content" style="white-space: pre-wrap;">
            @if (Model.Content.Length > 500)
            {
                @Model.Content.Substring(0, 500)
            
                <text>...</text>
            }
            else
            {
                @Model.Content
            }
        </div>
    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirmer la suppression
        </button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div>
